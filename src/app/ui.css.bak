:root{
  --bg: #0b0d10;
  --panel: rgba(255,255,255,0.06);
  --panel-2: rgba(255,255,255,0.08);
  --text: #f5f7fb;
  --muted: #b8c0cc;
  --accent: #6ee7ff;
  --accent-2:#a78bfa;
  --ring: rgba(110,231,255,.4);
}
*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  color:var(--text);
  background:
    radial-gradient(1200px 600px at 80% -10%, rgba(167,139,250,.25), transparent 60%),
    radial-gradient(900px 500px at 0% 110%, rgba(110,231,255,.18), transparent 55%),
    var(--bg);
  font: 16px/1.5 ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Inter, "Helvetica Neue", Arial;
}
.app-shell{
  min-height:100dvh;
  display:flex;
  align-items:center;
  justify-content:center;
  padding:32px 20px;
}
.container{ width:100%; max-width: 920px; }

.header{
  display:flex; align-items:center; justify-content:space-between; gap:12px; margin-bottom:20px;
}
.brand{ display:flex; align-items:center; gap:10px; font-weight:700; letter-spacing:.3px; }
.badge{
  padding:4px 10px; border-radius:999px; background:var(--panel); color:var(--muted); font-size:12px;
  border:1px solid rgba(255,255,255,.08);
}
.card{
  background:linear-gradient(180deg, var(--panel), var(--panel-2));
  border: 1px solid rgba(255,255,255,.08);
  border-radius: 18px;
  box-shadow: 0 10px 30px rgba(0,0,0,.35);
}
.card-inner{ padding:22px; }
.card-lg .card-inner{ padding:32px; }

.grid{ display:grid; gap:14px; }
.grid-2{ grid-template-columns:repeat(2, minmax(0,1fr)); }
.grid-3{ grid-template-columns: repeat(3, minmax(0,1fr)); }
@media (max-width: 820px){ 
  .grid-2{ grid-template-columns:1fr; } 
  .grid-3{ grid-template-columns: 1fr; } 
}
h1{ margin:0 0 8px; font-size: clamp(22px, 4vw, 34px); line-height:1.15; letter-spacing:.2px; }
.sub{ color:var(--muted); margin:0 0 24px; }
.row{ display:flex; gap:12px; align-items:center; flex-wrap:wrap; }

.input, .select{
  appearance:none; outline:none; width:100%;
  background:rgba(255,255,255,.04);
  border:1px solid rgba(255,255,255,.1);
  color:var(--text);
  padding:14px 14px;
  min-height:44px;
  border-radius:12px;
  transition:border .15s ease, box-shadow .15s ease, background .15s ease;
  color-scheme: dark; /* ensure dropdown/picker renders dark in Chromium */
}
.input:focus, .select:focus{
  border-color: var(--accent);
  box-shadow: 0 0 0 6px var(--ring);
  background:rgba(255,255,255,.06);
}
/* Ensure dropdown option list has visible contrast in dark UI */
.select option, .select optgroup{
  background-color: #0b0d10;
  color: var(--text);
}
@media (prefers-color-scheme: light){
  .select option, .select optgroup{
    background-color: #ffffff;
    color: #111827; /* slate-900 */
}
}
/* High contrast / forced colors safety */
@media (forced-colors: active){
  .input, .select{ forced-color-adjust: auto; }
}
.label{ font-size:12px; color:var(--muted); margin-bottom:8px; display:block; }

.btn{
  appearance:none; border:none; cursor:pointer;
  padding:14px 18px; border-radius:12px; font-weight:600;
  color:#001118; background: linear-gradient(180deg, var(--accent), #87f0ff);
  transition: transform .06s ease, box-shadow .15s ease, opacity .15s ease;
  box-shadow: 0 8px 20px rgba(110,231,255,.25);
}
.btn:hover{ transform: translateY(-1px); }
.btn:active{ transform: translateY(0); opacity:.95; }

.btn-secondary{
  background:transparent; color:var(--text);
  border:1px solid rgba(255,255,255,.12); box-shadow:none;
}
.kicker{ font-size:12px; color:var(--muted); text-transform:uppercase; letter-spacing:.12em; }
.divider{ height:1px; background:rgba(255,255,255,.08); margin:16px 0; border-radius:1px; }
.footer-row{ display:flex; gap:10px; justify-content:flex-end; margin-top:18px; flex-wrap:wrap; }
.lozenge{
  display:inline-flex; align-items:center; gap:8px; padding:8px 12px;
  border-radius:999px;
  background:rgba(255,255,255,.05); border:1px solid rgba(255,255,255,.1); color:var(--muted); font-size:13px;
}
@keyframes spin{ to{ transform:rotate(360deg);} }
.spinner{
  width:48px; height:48px; border-radius:999px; border:3px solid rgba(255,255,255,.15); border-top-color:var(--accent);
  animation: spin 1s linear infinite;
}
.code{
  width:100%; max-height:420px; overflow:auto; background:rgba(0,0,0,.35); border:1px solid rgba(255,255,255,.1);
  padding:16px; border-radius:12px; font: 12px/1.4 ui-monospace, SFMono-Regular, Menlo, Consolas, "Liberation Mono", monospace;
  color:#e9eef7;
}
.time-big{ 
  font-size: clamp(28px, 5vw, 42px); 
  line-height: 1.1; 
  font-weight: 700; 
  letter-spacing: 0.5px; 
  margin: 4px 0 8px;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.help{ 
  font-size: 14px; 
  color: var(--muted); 
  line-height: 1.4; 
}
/* Enhanced timeline styling */
.timeline{ display: flex; flex-direction: column; gap: 8px; }
.timeline .item{ 
  display: flex; align-items: center; gap: 10px; 
  font-size: 14px; color: var(--muted);
}
.timeline .dot{ 
  width: 8px; height: 8px; border-radius: 50%; 
  background: var(--accent); flex-shrink: 0;
}
/* ===== DateTime visibility fix (Chromium/Windows) ===== */
input[type="datetime-local"]{
  color: var(--text) !important;
  background-color: rgba(255,255,255,.04) !important;
  color-scheme: dark; /* force dark widgets */
}
input[type="datetime-local"]::-webkit-datetime-edit,
input[type="datetime-local"]::-webkit-datetime-edit-fields-wrapper,
input[type="datetime-local"]::-webkit-datetime-edit-text,
input[type="datetime-local"]::-webkit-datetime-edit-hour-field,
input[type="datetime-local"]::-webkit-datetime-edit-minute-field,
input[type="datetime-local"]::-webkit-datetime-edit-ampm-field,
input[type="datetime-local"]::-webkit-datetime-edit-day-field,
input[type="datetime-local"]::-webkit-datetime-edit-month-field,
input[type="datetime-local"]::-webkit-datetime-edit-year-field{
  color: var(--text) !important;
  opacity: .95;
  background: transparent !important;
}
input[type="datetime-local"]::-webkit-calendar-picker-indicator{ filter: invert(1) opacity(.9); }
input[type="datetime-local"]::placeholder{ color: var(--muted); opacity:.7; }
input[type="datetime-local"]:-webkit-autofill,
input[type="datetime-local"]:-webkit-autofill:hover,
input[type="datetime-local"]:-webkit-autofill:focus{
  -webkit-text-fill-color: var(--text);
  transition: background-color 9999s;
}
@media (forced-colors: active){
  input[type="datetime-local"]{ forced-color-adjust: none; }
}
/* ===== end fix ===== */

/* chips & checkbox rows */
.chip{
  display:inline-flex; align-items:center; gap:8px;
  padding:6px 10px; border-radius:999px;
  background:rgba(255,255,255,.05);
  border:1px solid rgba(255,255,255,.1);
  color:var(--muted); font-size:12px;
}
.chip.bad{ border-color: rgba(255,120,120,.25); color:#ffd2d2; }
.chip.good{ border-color: rgba(120,255,180,.25); color:#d7ffe9; }
.chip-success{
  padding:2px 8px; border-radius:12px; font-size:12px; font-weight:500;
  border: 1px solid rgba(120,255,180,.25); color:#d7ffe9; background:rgba(120,255,180,.1);
}
.chip-warning{
  padding:2px 8px; border-radius:12px; font-size:12px; font-weight:500;
  border: 1px solid rgba(255,180,120,.25); color:#ffe9d7; background:rgba(255,180,120,.1);
}
.chip-error{
  padding:2px 8px; border-radius:12px; font-size:12px; font-weight:500;
  border: 1px solid rgba(255,120,120,.25); color:#ffd2d2; background:rgba(255,120,120,.1);
}
label.check{
  display:flex; gap:12px; align-items:flex-start;
  background:rgba(255,255,255,.04); border:1px solid rgba(255,255,255,.08);
  border-radius:12px; padding:14px 16px;
}
label.check input{ width:18px; height:18px; margin-top:2px; }
label.check .hint{ color:var(--muted); font-size:12px; }

/* Interactive comfort level cards */
.comfort-card {
  transition: all 0.2s ease;
  position: relative;
  background: linear-gradient(180deg, var(--panel), var(--panel-2)) !important;
  box-shadow: 0 10px 30px rgba(0,0,0,.35);
}
.comfort-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 15px 40px rgba(0,0,0,.4);
}
.comfort-card:active {
  transform: translateY(0);
}
.comfort-card:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(110,231,255,.3);
}
.comfort-action {
  position: absolute;
  bottom: 8px;
  right: 12px;
  font-size: 10px;
  color: var(--accent);
  opacity: 0;
  transition: opacity 0.2s ease;
  pointer-events: none;
}
.comfort-card:hover .comfort-action {
  opacity: 0.8;
}
/* Print styles for passport card */
@media print {
  body * {
    visibility: hidden;
}
  .passport-print, .passport-print * {
    visibility: visible;
}
  .passport-print {
    position: absolute;
    left: 0;
    top: 0;
    width: 100% !important;
    height: auto !important;
    page-break-inside: avoid;
}
  .app-shell {
    min-height: auto;
    padding: 0;
}
  .container {
    max-width: none;
}
  .header, .footer-row, .row:has(.btn) {
    display: none !important;
}
}

/* === Seam-safe clouds background (dark), minimal and stable === */
.bg-clouds{
  position: fixed;
  left: 50%;
  top: 50%;
  width: 180vmax;
  height: 180vmax;
  transform: translate(-50%, -50%);
  z-index: 0;
  pointer-events: none;
  background:
    radial-gradient(120vmax 80vmax at 10% 0%, rgba(56,78,155,0.60) 0%, rgba(56,78,155,0) 55%),
    radial-gradient(110vmax 70vmax at 100% 10%, rgba(149,80,222,0.45) 0%, rgba(149,80,222,0) 58%),
    radial-gradient(120vmax 80vmax at 30% 90%, rgba(0,141,178,0.35) 0%, rgba(0,141,178,0) 60%),
    radial-gradient(110vmax 70vmax at 90% 85%, rgba(0,180,120,0.30) 0%, rgba(0,180,120,0) 60%),
    linear-gradient(180deg, #0b0f18 0%, #0b1220 100%);
  background-blend-mode: screen, screen, screen, screen, normal;
  filter: blur(48px) saturate(110%);
  animation: clouds-move 48s ease-in-out infinite alternate;
  opacity: .92;
  will-change: transform;
}
@keyframes clouds-move{
  0%   { transform: translate(-50%, -50%) scale(1.0); }
  50%  { transform: translate(calc(-50% + 1.0vmax), calc(-50% + 0.6vmax)) scale(1.03); }
  100% { transform: translate(calc(-50% - 0.6vmax), calc(-50% + 1.0vmax)) scale(1.0); }
}
@media (prefers-reduced-motion: reduce){
  .bg-clouds{ animation: none; }
}
